{
  "name": "jmfrancois",
  "private": true,
  "engines": {
    "pnpm": "10.26.2"
  },
  "scripts": {
    "changeset": "changeset",
    "clean:build": "rimraf */*/build",
    "postinstall": "pnpm recursive run --if-present build",
    "release": "pnpm changeset publish",
    "build": "pnpm recursive run --if-present build",
    "lint": "pnpm recursive run --if-present lint",
    "test": "pnpm recursive run --if-present test",
    "predeploy": "pnpm recursive run --if-present predeploy && ts-node --project tsconfig.node.json public-copy.ts",
    "deploy": "gh-pages -d public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@jmfrancois/eslint-config": "workspace:*",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.19.27",
    "gh-pages": "^6.3.0",
    "glob": "^10.5.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
