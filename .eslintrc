{
	"plugins": ["import", "react-hooks", "prettier", "testing-library"],
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:import/recommended",
		"plugin:import/react",
		"prettier"
	],
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest": true
	},

	"rules": {
		"prettier/prettier": 2
	},
	"settings": {
		"react": {
			"version": "detect"
		},
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx"]
			}
		}
	}
}
